{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <br>
        <p class="label label-default center-block" style="font-size:  x-large">Liste des utilisateurs</p><br>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Droits</th>
                    <th>Mot de passe</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.permissions }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('users_show', { 'id': user.id }) }}">Voir</a>
                                </li>
                                <li>
                                    <a href="{{ path('users_edit', { 'id': user.id }) }}">Modifier</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-offset-4 col-md-4">
        <ul>
            <br>
            <li>
                <a href="{{ path('users_new') }}">Créer un nouvel utilisateur</a>
            </li>
        </ul>
        <p><br><br>
            <a href="{{ path('zecashdesk_default_page_responsable') }}" type="button"
               class="btn btn-warning btn-lg center-block">Retour au Menu principal</a>
            <br><br></p>
    </div>
{% endblock %}
