{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tickets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datetime</th>
                <th>Total</th>
                <th>Cash</th>
                <th>Cheque</th>
                <th>Cb</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('tickets_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
                <td>{% if ticket.dateTime %}{{ ticket.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ ticket.total }}</td>
                <td>{{ ticket.cash }}</td>
                <td>{{ ticket.cheque }}</td>
                <td>{{ ticket.cb }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tickets_show', { 'id': ticket.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('tickets_edit', { 'id': ticket.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tickets_new') }}">Create a new ticket</a>
        </li>
    </ul>
    <div class="col-md-offset-3 col-md-3">
        <p><br><br>
            <a href="{{ path('zecashdesk_default_page_responsable') }}" type="button"
               class="btn btn-warning btn-lg center-block">Retour au Menu principal</a>
            <br><br></p>
    </div>
{% endblock %}
