{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <br>
        <p class="label label-default center-block" style="font-size:  x-large">Ticket</p><br>
    </div>
    <div class="row">
        <div class="col-md-offset-5 col-md-3">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ticket.id }}</td>
                </tr>
                <tr>
                    <th>Numéro ticket</th>
                    <td>{{ ticket.numTicket }}</td>
                </tr>
                </tbody>
            </table>
            <br>

            <ul>
                <li>
                    <a href="{{ path('tickets_index') }}">Retour à la liste</a>
                </li>
                <li>
                    <a href="{{ path('tickets_edit', { 'id': ticket.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
