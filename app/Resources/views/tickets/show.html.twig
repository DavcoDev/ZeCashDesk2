{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ticket</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{% if ticket.dateTime %}{{ ticket.dateTime|date('d-m-Y H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ ticket.total }}</td>
            </tr>
            <tr>
                <th>Espèces</th>
                <td>{{ ticket.cash }}</td>
            </tr>
            <tr>
                <th>Chèque</th>
                <td>{{ ticket.cheque }}</td>
            </tr>
            <tr>
                <th>CB</th>
                <td>{{ ticket.cb }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tickets_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('tickets_edit', { 'id': ticket.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
