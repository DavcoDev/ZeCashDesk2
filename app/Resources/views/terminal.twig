{% extends 'base.html.twig' %}
{% block body %}

    <body style="background-color: #adadad">
<div id="container" class="container">

    <div id="refproduit" class="panel panel-primary"><!--reference et info produit-->
        <div class="panel-heading text-center">Référence produit</div>
        <div id="ref" class="panel-body">
            <div id="refleft" class="panel-body"></div>
            <div id="refright" class="panel-body text-right">
                <input id="codebarre" type="text" placeholder="Gencode">
            </div>
        </div>
    </div>
    <div id="globaldiv" class="panel-collapse">
        <div id="leftdiv" class="panel-collapse">
            <div id="ticket" class="panel panel-info">
                <div id="numTicket" class="panel-heading text-center">Ticket n°:</div>
                <table id="showTicket" class="table">
                    <tr>
                        <th>Quantité</th>
                        <th>Produit</th>
                        <th>P.U</th>
                        <th>Total</th>
                    </tr>
                </table>
                <div id="totalTicket" class="panel panel-info col-lg-offset-8 col-lg-4 col-md-offset-8 col-md-4 ">

                </div>
            </div>
        </div><!--end-leftdiv-->

        <div id="rightdiv" class="panel-collapse">
            <div id="quantite" class="panel panel-info">
                <div class="panel-heading text-center">Quantité</div>
                <div class="panel-body text-right">
                    <input id="qtyTicket" class="panel-body text-right" type="text" value="1">
                </div>
            </div>
            <input type="button" id="validation" class="btn btn-info" value="Valider"/>
            <input type="button" id="annulation" class="btn btn-danger" value="Annuler article"/>

            <div class="reglement">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">CB :</label>
                        <div class="col-sm-10">
                            <input id="cb" type="text" placeholder="0"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">CHQ:</label>
                        <div class="col-sm-10">
                            <input id="chq" type="text" placeholder="0"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">ESP:</label>
                        <div class="col-sm-10">
                            <input id="esp" type="text" placeholder="0"/>
                        </div>
                    </div>
                </form>
                <!--<label for="cb">CB_</label><input id="cb" type="text" placeholder="0"/>
                <label for="chq">CHQ</label><input id="chq" type="text" placeholder="0"/>
                <label for="esp">ESP</label><input id="esp" type="text" placeholder="0"/-->
                <input id="reglement" type="button" class="btn btn-primary" value="Règlements"/>
            </div>
            <p><br><br>
                <a href="{{ path('base') }}" type="button" id="retour"
                   class="btn btn-warning btn-lg">Retour au Menu principal</a>
                <br><br></p>

        </div><!--end-righydiv-->
    </div><!--end-globaldiv-->
</div>
{% endblock %}